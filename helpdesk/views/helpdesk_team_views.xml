<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record model="ir.ui.view" id="helpdesk_team_view_form">
    <field name="name">helpdesk team view form</field>
    <field name="model">helpdesk.team</field>
    <field name="arch" type="xml">
      <form string="Helpdesk Team">
        <sheet>
          <group name="main">
            <h1 class="o_row">
              Name:
              <field name="code"/> - <field name="name"/>
            </h1>
          </group>
          <group name="users" string="Users">
            <group>
              <field name="user_ids" widget="many2many_tags" nolabel="1"/>
            </group>
            <group name="tickets" string="Tickets" colspan="4">
              <field name="ticket_qty" nolabel="1"/>
              <field name="ticket_ids" nolabel="1"/>
            </group>
          </group>
        </sheet>
        <div class="oe_chatter">
          <field name="message_follower_ids" widget="mail_followers"/>
          <field name="activity_ids" widget="mail_activity"/>
          <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
        </div>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="helpdesk_team_view_tree">
    <field name="name">helpdesk team view tree</field>
    <field name="model">helpdesk.team</field>
    <field name="arch" type="xml">
      <tree string="Helpdesk Team">
        <field name="code"/>
        <field name="name"/>
        <field name="user_ids" widget="many2many_tags"/>
        <field name="ticket_qty"/>
      </tree>
    </field>
  </record>

  <record id="view_helpdesk_team_kanban" model="ir.ui.view">
    <field name="name">helpdesk.team.kanban</field>
    <field name="model">helpdesk.team</field>
    <field name="priority" eval="100"/>
    <field name="arch" type="xml">
      <kanban >
        <field name="name"/>
        <templates>
          <t t-name="kanban-box">
            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
              <h1>
                <field name="code"/>
                -
                <field name="name"/>
              </h1>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <record model="ir.ui.view" id="helpdesk_team_view_search">
    <field name="name">helpdesk team view search</field>
    <field name="model">helpdesk.team</field>
    <field name="arch" type="xml">
      <search string="Helpdesk Team">
        <field name="name"/>
      </search>
    </field>
  </record>

</odoo>
