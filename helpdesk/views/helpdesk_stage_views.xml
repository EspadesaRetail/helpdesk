<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record model="ir.ui.view" id="helpdesk_stage_view_form">
    <field name="name">helpdesk stage view form</field>
    <field name="model">helpdesk.stage</field>
    <field name="arch" type="xml">
      <form string="Helpdesk Stage">
        <sheet>
          <group>
            <field name="name"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="helpdesk_stage_view_tree">
    <field name="name">helpdesk stage view tree</field>
    <field name="model">helpdesk.stage</field>
    <field name="arch" type="xml">
      <tree string="Helpdesk Stage">
        <field name="name"/>
      </tree>
    </field>
  </record>

  <record model="ir.ui.view" id="helpdesk_stage_view_search">
    <field name="name">helpdesk stage view search</field>
    <field name="model">helpdesk.stage</field>
    <field name="arch" type="xml">
      <search string="Helpdesk Stage">
        <field name="name"/>
      </search>
    </field>
  </record>

</odoo>
